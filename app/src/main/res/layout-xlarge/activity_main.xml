<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyLight"
    tools:context="com.example.android.cisco.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/main_layout_margin2"
        android:layout_marginRight="@dimen/main_layout_margin2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/pic_height_xlarge"
                android:src="@drawable/cisco_logo"
                android:layout_marginTop="@dimen/main_layout_margin2"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textStyle="bold"
            android:textSize="@dimen/text_size1_xlarge"
            android:layout_marginTop="@dimen/text_margin_xlarge"
            android:layout_marginBottom="@dimen/text_margin_xlarge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textSize="@dimen/text_size1_xlarge"
            android:layout_marginTop="@dimen/text_margin_xlarge"
            android:layout_marginBottom="@dimen/text_margin_xlarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tel"
            android:textSize="@dimen/text_size2_xlarge"/>


    </LinearLayout>

</ScrollView>
